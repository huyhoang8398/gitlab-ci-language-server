{
  "name": "gitlab-ci-ls",
  "version": "1.0.3",
  "description": "Language Server Protocol (LSP) server for GitLab CI YAML files",
  "main": "dist/server.js",
  "bin": {
    "gitlab-ci-ls": "./bin/gitlab-ci-ls.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js --stdio",
    "pkg": "pkg dist/server.js --targets node18-linux-x64 --output bin/gitlab-ci-ls-linux"
  },
  "pkg": {
    "assets": ["dist/**/*"],
    "outputPath": "bin"
  },
  "dependencies": {
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "pkg": "^5.8.1",
    "typescript": "^5.5.4"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git"
  }
}
