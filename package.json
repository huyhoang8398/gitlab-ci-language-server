{
  "name": "gitlab-ci-ls",
  "version": "1.0.0",
  "description": "GitLab CI YAML Language Server for Neovim",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js --stdio",
    "pkg": "pkg . --targets node18-linux-x64,node18-macos-x64,node18-macos-arm64,node18-win-x64 --output bin/gitlab-ci-ls"
  },
  "bin": {
    "gitlab-ci-ls": "dist/server.js"
  },
  "pkg": {
    "assets": ["dist/**/*"],
    "outputPath": "bin"
  },
  "devDependencies": {
    "pkg": "^5.8.1",
    "typescript": "^5.0.0"
  }
}
